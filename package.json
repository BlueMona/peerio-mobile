{
  "name": "peeriomobile",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "postinstall": "sh setup-env.sh && rn-nodeify --install 'crypto, stream, process, events, vm' --hack && perl -pi -e 's/RCT_NO_LAUNCH_PACKAGER/MAC_OS_X_PRODUCT_BUILD_VERSION/g' node_modules/react-native/React/React.xcodeproj/project.pbxproj",
    "commit": "git-cz",
    "start": "source env.sh && ./node_modules/react-native/packager/packager.sh",
    "expandoo": "source env-expandoo.sh && ./node_modules/react-native/packager/packager.sh --reset-cache",
    "clean": "rm -rf ios/build",
    "ios": "npm update && npm run postinstall && react-native run-ios",
    "ios-expandoo": "react-native run-ios --scheme expandoo --simulator \"iPhone 7\"",
    "android": "react-native run-android",
    "lint": "eslint . --ext .js,.jsx",
    "lint-local": "eslint",
    "localize": "tx pull -af",
    "release": "standard-version && git push --follow-tags origin master",
    "link": "react-native link",
    "bundle": "echo stub",
    "build-ios": "cd ios && xcodebuild -scheme peeriomobile -configuration Debug build",
    "build-ios-expandoo": "cd ios && xcodebuild -scheme expandoo -configuration Debug build",
    "build-ios-nocodesign": "cd ios && xcodebuild -scheme peeriomobile -configuration Debug build -sdk iphonesimulator PLATFORM_NAME=iphonesimulator",
    "build-android": "react-native bundle --platform android --dev false --entry-file index.android.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res/ && cd android && ./gradlew assembleRelease",
    "test": "bash setup_tests.sh && py.test --platform=ios -s -x tests",
    "tf-peerio": "fastlane ios beta --env=peerio",
    "tf-expandoo": "fastlane ios beta --env=expandoo",
    "appium": "appium"
  },
  "dependencies": {
    "bluebird": "3.4.6",
    "buffer": "5.0.2",
    "events": "1.1.1",
    "file-loader": "0.9.0",
    "is_js": "0.9.0",
    "lodash": "4.17.2",
    "mobx": "2.6.4",
    "mobx-react": "^3.5.9",
    "moment": "^2.17.0",
    "nacl-stream": "0.3.3",
    "peerio-copy": "git+https://github.com/PeerioTechnologies/peerio-copy.git#icebear",
    "peerio-icebear": "git@github.com:PeerioTechnologies/peerio-icebear.git",
    "peerio-translator": "git+https://github.com/PeerioTechnologies/peerio-translator.git#icebear",
    "process": "^0.11.9",
    "react": "15.3.1",
    "react-addons-pure-render-mixin": "15.3.1",
    "react-dom": "15.3.1",
    "react-native": "0.35.0",
    "react-native-animatable": "^0.6.1",
    "react-native-cli": "*",
    "react-native-crypto": "^2.0.1",
    "react-native-fit-image": "^1.3.3",
    "react-native-fs": "https://github.com/calvium/react-native-fs#android_assets_support_plus_exists",
    "react-native-image-picker": "^0.23.0",
    "react-native-picker": "3.0.5",
    "react-native-randombytes": "^2.1.0",
    "react-native-restart": "0.0.1",
    "react-native-vector-icons": "^2.1.0",
    "readable-stream": "1.0.33",
    "scrypt-async": "1.3.0",
    "socket.io-client": "^1.7.1",
    "stream-browserify": "^1.0.0",
    "tweetnacl": "0.14.4",
    "vm-browserify": "0.0.4"
  },
  "peerDependencies": {
    "react-native": "0.35.0",
    "buffer": "^5.0.0"
  },
  "devDependencies": {
    "appium": "1.6.2",
    "babel-eslint": "^6.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "3.5.0",
    "commitizen": "2.8.5",
    "cz-conventional-changelog": "1.1.7",
    "eslint": "3.7.1",
    "eslint-config-peerio": "*",
    "eslint-plugin-flowtype": "^2.20.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "flow-bin": "^0.27.0",
    "ghooks": "1.3.2",
    "mocha": "3.0.2",
    "opt-cli": "^1.5.1",
    "rn-nodeify": "github:mvayngrib/rn-nodeify",
    "semantic-release": "4.3.5",
    "standard-version": "^2.4.0",
    "validate-commit-message": "3.0.1"
  },
  "config": {
    "ghooks": {
      "post-checkout": "",
      "pre-push": "opt --out pre-push --exec \"npm run lint\"",
      "post-merge": "opt --out post-merge --exec \"npm update\"",
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "helpMessage": "Convention: https://goo.gl/3TgTsh"
    }
  },
  "react-native": {
    "crypto": "react-native-crypto",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify",
    "vm": "vm-browserify"
  },
  "browser": {
    "crypto": "react-native-crypto",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify",
    "vm": "vm-browserify"
  }
}
