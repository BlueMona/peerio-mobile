{
  "name": "peeriomobile",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "postinstall": "sh setup-env.sh && rn-nodeify --install --hack && perl -pi -e 's/RCT_NO_LAUNCH_PACKAGER/MAC_OS_X_PRODUCT_BUILD_VERSION/g' node_modules/react-native/React/React.xcodeproj/project.pbxproj",
    "commit": "git-cz",
    "start": "source env.sh && ./node_modules/react-native/packager/packager.sh --reset-cache",
    "clean": "rm -rf ios/build",
    "ios": "react-native run-ios",
    "android": "react-native run-android",
    "lint": "eslint . --ext .js,.jsx",
    "lint-local": "eslint",
    "localize": "tx pull -af",
    "release": "standard-version && git push --follow-tags origin master",
    "link": "react-native link",
    "bundle": "echo stub",
    "build-ios": "cd ios && xcodebuild -scheme peeriomobile -configuration Debug build",
    "build-ios-nocodesign": "cd ios && xcodebuild -scheme peeriomobile -configuration Debug build -sdk iphonesimulator PLATFORM_NAME=iphonesimulator",
    "build-android": "react-native bundle --platform android --dev false --entry-file index.android.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res/ && cd android && ./gradlew assembleRelease",
    "test": "bash setup_tests.sh && py.test --platform=ios -s -x tests",
    "appium": "appium"
  },
  "dependencies": {
    "assert": "^1.4.1",
    "browserify-zlib": "^0.1.4",
    "buffer": "^3.6.0",
    "console-browserify": "^1.1.0",
    "constants-browserify": "0.0.1",
    "dns.js": "^1.0.1",
    "domain-browser": "^1.1.7",
    "events": "^1.1.1",
    "file-loader": "0.9.0",
    "https-browserify": "0.0.1",
    "lodash": "^4.15.0",
    "mobx": "^2.4.4",
    "mobx-react": "^3.5.5",
    "os-browserify": "^0.1.2",
    "path-browserify": "0.0.0",
    "peerio-copy": "git+https://github.com/PeerioTechnologies/peerio-copy.git",
    "peerio-icebear": "git@github.com:PeerioTechnologies/peerio-icebear.git",
    "peerio-translator": "git+https://github.com/PeerioTechnologies/peerio-translator.git#feature-module",
    "process": "^0.11.9",
    "punycode": "^1.4.1",
    "querystring-es3": "^0.2.1",
    "react": "^15.3.1-rc.2",
    "react-dom": "^15.3.1-rc.2",
    "react-native": "^0.34.0-rc.0",
    "react-native-animatable": "^0.6.1",
    "react-native-autogrow-textinput": "^2.1.0",
    "react-native-cli": "*",
    "react-native-crypto": "^2.0.1",
    "react-native-fit-image": "^1.3.3",
    "react-native-http": "github:tradle/react-native-http#834492d",
    "react-native-keyboard-aware-scroll-view": "git+https://github.com/APSL/react-native-keyboard-aware-scroll-view.git",
    "react-native-level-fs": "^3.0.0",
    "react-native-mobx": "^0.3.1",
    "react-native-picker": "3.0.5",
    "react-native-randombytes": "^2.1.0",
    "react-native-router-flux": "^3.35.0",
    "react-native-tcp": "^2.0.4",
    "react-native-udp": "^1.2.6",
    "react-native-vector-icons": "^2.1.0",
    "readable-stream": "^1.0.33",
    "stream-browserify": "^1.0.0",
    "timers-browserify": "^1.4.2",
    "tty-browserify": "0.0.0",
    "url": "^0.10.3",
    "url-loader": "0.5.7",
    "vm-browserify": "0.0.4"
  },
  "devDependencies": {
    "appium": "^1.5.3",
    "babel-eslint": "^6.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "3.5.0",
    "commitizen": "2.8.5",
    "cz-conventional-changelog": "1.1.7",
    "eslint": "3.7.1",
    "eslint-config-peerio": "*",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "flow-bin": "^0.27.0",
    "ghooks": "1.3.2",
    "mocha": "3.0.2",
    "opt-cli": "^1.5.1",
    "rn-nodeify": "github:mvayngrib/rn-nodeify",
    "semantic-release": "4.3.5",
    "standard-version": "^2.4.0",
    "validate-commit-message": "3.0.1"
  },
  "config": {
    "ghooks": {
      "post-checkout": "",
      "pre-push": "opt --out pre-push --exec \"npm run lint\"",
      "post-merge": "opt --out post-merge --exec \"npm update\"",
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "helpMessage": "Convention: https://goo.gl/3TgTsh"
    }
  },
  "react-native": {
    "zlib": "browserify-zlib",
    "console": "console-browserify",
    "constants": "constants-browserify",
    "crypto": "react-native-crypto",
    "dns": "dns.js",
    "net": "react-native-tcp",
    "domain": "domain-browser",
    "http": "react-native-http",
    "https": "https-browserify",
    "os": "os-browserify",
    "path": "path-browserify",
    "querystring": "querystring-es3",
    "fs": "react-native-level-fs",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "dgram": "react-native-udp",
    "stream": "stream-browserify",
    "timers": "timers-browserify",
    "tty": "tty-browserify",
    "vm": "vm-browserify"
  },
  "browser": {
    "zlib": "browserify-zlib",
    "console": "console-browserify",
    "constants": "constants-browserify",
    "crypto": "react-native-crypto",
    "dns": "dns.js",
    "net": "react-native-tcp",
    "domain": "domain-browser",
    "http": "react-native-http",
    "https": "https-browserify",
    "os": "os-browserify",
    "path": "path-browserify",
    "querystring": "querystring-es3",
    "fs": "react-native-level-fs",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "dgram": "react-native-udp",
    "stream": "stream-browserify",
    "timers": "timers-browserify",
    "tty": "tty-browserify",
    "vm": "vm-browserify"
  }
}
