{
  "name": "peeriomobile",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "clean": "rm -rf ios/build",
    "ios": "react-native run-ios",
    "lint": "eslint . --ext .js,.jsx",
    "lint-local": "eslint",
    "localize": "tx pull -af",
    "release": "standard-version && git push --follow-tags origin master",
    "bundle": "./node_modules/.bin/react-native bundle --dev --entry-file index.ios.js --bundle-output ios/main.jsbundle --platform ios",
    "build-ios": "npm run bundle && cd ios && xcodebuild -scheme peeriomobile -configuration Debug build",
    "build-ios-nocodesign": "npm run bundle && cd ios && xcodebuild -scheme peeriomobile -configuration Debug build -sdk iphonesimulator",
    "test": "bash setup_tests.sh && py.test --platform=ios -s -x tests",
    "appium": "appium"
  },
  "dependencies": {
    "file-loader": "0.9.0",
    "react": "15.2.1",
    "react-native": "0.30.0",
    "react-native-cli": "*",
    "react-native-picker": "3.0.5",
    "react-router": "^2.6.1",
    "url-loader": "0.5.7"
  },
  "devDependencies": {
    "appium": "^1.5.3",
    "babel-eslint": "^6.1.2",
    "chai": "3.5.0",
    "commitizen": "2.8.5",
    "cz-conventional-changelog": "1.1.7",
    "eslint": "2.10.2",
    "eslint-config-peerio": "1.1.1",
    "flow-bin": "^0.27.0",
    "ghooks": "1.3.2",
    "mocha": "3.0.2",
    "opt-cli": "^1.5.1",
    "semantic-release": "4.3.5",
    "standard-version": "^2.4.0",
    "validate-commit-message": "3.0.1"
  },
  "config": {
    "ghooks": {
      "post-checkout": "opt --out post-checkout --exec \"npm update\"",
      "pre-push": "opt --out pre-push --exec \"npm run lint\"",
      "post-merge": "opt --out post-merge --exec \"npm update\"",
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "helpMessage": "Convention: https://goo.gl/3TgTsh"
    }
  }
}
